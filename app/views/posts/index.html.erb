<%= link_to 'Add Post', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <li><%= post.title %> - Posted By: <%= post.user %></li>
    <%= link_to "Edit", edit_post_path(post)  %>  |
    <%= link_to "Delete", post_path(post),
                    :data => {:confirm => "Are you sure?",
                              :method => "delete"} %>
  <% end %>
</ul>
