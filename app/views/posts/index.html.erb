<div>

  <table class="posts">
    <tr>
      <th>
        <%= link_to "Title", :sort => 'title' %>
      </th>
      <th>
        Posted By
      </th>
      <th>
        <%= link_to "Posted On", :sort => 'created_at' %>
      </th>
      <th>
        Description
      </th>
      <th>
        <%= link_to "Rating", :sort => 'rating DESC' %>
      </th>
      <th>

      </th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.title %>
      </td>
      <td>
        <%= post.user %>
      </td>
      <td>
        <%= post.created_at %>
      </td>
      <td>
        <%= post.description %>
      </td>
      <td>
        <%= post.rating %>
      </td>
      <td>
        <%= link_to "Edit", edit_post_path(post)%> | <%= link_to "Delete", post_path(post) ,
        :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
