<%= form_for [@post], :html => {:class => "form"} do |f| %>
  <div class="form-group">
  <%= f.label :user %>
  <%= f.text_field :user, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :rating %>
  <%= f.text_field :rating, class: "form-control" %>
  </div>
  <p><%= f.submit class: 'btn btn-default' %></p>
<% end %>
